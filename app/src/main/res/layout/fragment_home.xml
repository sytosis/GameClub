<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/wood_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/bigButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#303030"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/message"
            android:layout_marginRight="@dimen/_30sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bigButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-109dp">

        <Button
            android:id="@+id/game_button"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/play_game_button"/>

        <Button
            android:id="@+id/left_button"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/make_friends_button"/>

        <Button
            android:id="@+id/right_button"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/friends_and_messages_button"/>
        <Button
            android:id="@+id/profile_button"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_170sdp"
            android:background="@drawable/my_profile_button"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>