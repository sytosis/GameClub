<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.authentication.AuthenticationFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/topText"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:textSize="30sp"
            android:id="@+id/authenticationTextTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_gameclub"
             />
        <TextView
            android:textSize="20sp"
            android:id="@+id/authenticationTextBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/let_s_start_by_setting_up_your_account"
            />
    </LinearLayout>

    <EditText
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="299dp" />

    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="385dp" />
    <LinearLayout
        android:id="@+id/bigButtonsLayout"
        app:layout_constraintTop_toBottomOf="@+id/bottomText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
        <Button
            android:background="@drawable/left_long"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/register"
            android:id="@+id/register_button"
            android:layout_marginEnd="50dp">
        </Button>

        <TextView
            android:textColor = "#141414"
            android:textSize="25sp"
            android:id="@+id/orText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:layout_marginEnd="50dp"/>

        <Button
            android:background="@drawable/right_long"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/login"
            android:id="@+id/login_button"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bigButtonsLayout">
        <Button
            android:background="@drawable/left_short"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/back"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:id="@+id/back_button"/>
        <Button
            android:background="@drawable/right_long_2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:text="@string/continueString"
            android:layout_centerHorizontal="true"
            android:id="@+id/continue_button"/>
        <Button
            android:background="@drawable/right_short"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:text="@string/next"
            android:layout_alignParentEnd="true"
            android:id="@+id/next_button"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>