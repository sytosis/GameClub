<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background"
    tools:context=".Ui.Home.HomeFragment">

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="680dp"
        android:layout_marginTop="@dimen/_23sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14sdp"
        android:textStyle="italic"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="680dp"
        android:layout_marginTop="@dimen/_73sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14sdp"
        android:textStyle="italic"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_surname"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="680dp"
        android:layout_marginTop="@dimen/_113sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14sdp"
        android:textStyle="italic"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_country"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="680dp"
        android:layout_marginTop="@dimen/_153sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14sdp"
        android:textStyle="italic"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/edit_interest"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="680dp"
        android:layout_marginTop="@dimen/_193sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14sdp"
        android:textStyle="italic"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="126dp"
        android:layout_height="93dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_back"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_200sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="Email"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_23sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="Name"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/first_name_text"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_23sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="Surname"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/last_name_text"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_23sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="Country"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/country_text"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_23sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="Interests"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/interests_text"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_23sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/clay_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:text="Me"
            android:textSize="@dimen/_25sdp"
            app:layout_constraintBottom_toTopOf="@+id/edit_profile_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_photo" />

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/border2"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>